<main class="cd-main-content">
    <div class="cd-tab-filter-wrapper">
        <div class="cd-tab-filter">
            <ul class="cd-filters">
                <li class="placeholder">
                    <a data-type="all" href="#0">All</a>
                    <!-- selected option on mobile -->
                </li>
                <li class="filter"><a class="selected" href="#0" data-type="all">All</a></li>
                <li class="filter" data-filter=".color-1"><a href="#0" data-type="color-1">Color 1</a></li>
                <li class="filter" data-filter=".color-2"><a href="#0" data-type="color-2">Color 2</a></li>
            </ul>
            <!-- cd-filters -->
        </div>
        <!-- cd-tab-filter -->
    </div>

    <div class="cd-filter">
        <form>
            <div class="cd-filter-block">
                <h4>Filter by</h4>
                <ul class="cd-filter-content cd-filters list">
                    <li>
                        <input class="filter" data-filter=".check1" type="checkbox" name="downloadable" id="checkbox1">
                        <label class="checkbox-label" for="checkbox1">Downloadable</label>
                    </li>

                    <li>
                        <input class="filter" data-filter=".check2" type="checkbox" name="duration" id="checkbox2">
                        <label class="checkbox-label" for="checkbox2">Duration (> 30min)</label>
                    </li>
                </ul>
                <hr class="small"/>
                <button class="btn btn-xl apply-filters">Apply</button>
            </div>
        </form>

        <a href="#" class="cd-close">&times;</a>
    </div>

    <a href="#0" class="cd-filter-trigger">Filters</a>
</main>
