<div class="cd-main-content">
    <div class="cd-tab-filter-wrapper">
        <div class="cd-tab-filter">
          <div id="search-wrap">
              <form action="" autocomplete="on">
                  <input id="search-value" name="search-value" type="text" class="search-value" placeholder="What are you looking for.. ?">
                  <input id="search-action" value="" data-tooltip="Tooltip" class="search-action">
              </form>
          </div>
        </div>
    </div>

    <div class="cd-filter">
        <form class="form-filters">
            <div class="cd-filter-block">
                <h4>Filter by</h4>
                <ul class="cd-filter-content cd-filters list">
                    <li>
                        <input class="filter" data-filter=".check1" type="checkbox" name="downloadable" id="checkbox1">
                        <label class="checkbox-label" for="checkbox1">Downloadable</label>
                    </li>
                    <li>
                        <input class="filter" data-filter=".check2" type="checkbox" name="duration" id="checkbox2">
                        <label class="checkbox-label" for="checkbox2">Duration (> 30min)</label>
                    </li>
                </ul>
            </div>
            <div class="cd-filter-block">
                <h4>Tags</h4>
                <div id="tags-content" class="cd-filter-content cd-filters list"></div>
                <hr class="small" />
                <button class="btn btn-mini btn-primary apply-filters">Apply</button>
            </div>
        </form>
        <a href="#" class="cd-close">&times;</a>
    </div>

    <a href="#0" class="cd-filter-trigger">Filters</a>
</div>
